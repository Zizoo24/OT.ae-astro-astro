  <!-- Specialists Section - Role-Based -->
  <section id="team" class="section bg-alt specialists-section">
    <div class="container">
      <div class="section-header">
        <span class="section-label exodus-label">Our Specialists</span>
        <h2 class="section-title exodus-section-title">Trusted Legal Translation Services in Dubai</h2>
      </div>
      <div class="grid grid-4 grid--auto-fit specialists-grid">
        <a href="/services/legal-translation/" class="specialist-card">
          <div class="specialist-icon">
            <i class="fas fa-gavel"></i>
          </div>
          <h3>Court & Litigation Translation</h3>
          <ul class="specialist-bullets">
            <li>Pleadings, memoranda, judgments</li>
            <li>Evidence bundles and exhibits</li>
            <li>UAE legal terminology</li>
          </ul>
