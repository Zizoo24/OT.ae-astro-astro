  <!-- Process Section - Exodus Style -->
  <section id="process" class="section bg-white process-section exodus-process">
    <div class="container">
      <div class="section-header">
        <span class="section-label exodus-label">Our Work Process</span>
        <h2 class="section-title exodus-section-title">Efficient Translation Services. Simplified.</h2>
      </div>
      <div class="grid grid-3 grid--auto-fit process-steps exodus-process-steps">
        <article class="process-step exodus-step">
          <div class="step-header">
            <span class="step-index">01</span>
            <div class="step-icon">
              <i class="fas fa-paper-plane"></i>
            </div>
          </div>
          <h3 class="step-title">Submit Your Document</h3>
          <p class="step-desc">Send via WhatsApp or upload through our secure portal. Accepted formats: PDF, JPG, PNG, DOCX.</p>
        </article>
        <article class="process-step exodus-step">
          <div class="step-header">
            <span class="step-index">02</span>
            <div class="step-icon">
              <i class="fas fa-file-invoice-dollar"></i>
            </div>
          </div>
          <h3 class="step-title">Instant Compliance Review</h3>
          <p class="step-desc">We verify document type and confirm whether additional attestation services are required.</p>
        </article>
        <article class="process-step exodus-step">
          <div class="step-header">
            <span class="step-index">03</span>
            <div class="step-icon">
              <i class="fas fa-certificate"></i>
            </div>
          </div>
          <h3 class="step-title">Immediate Delivery</h3>
          <p class="step-desc">Receive your certified translation digitally within hours. Physical copies couriered when needed.</p>
        </article>
      </div>
    </div>
  </section>

  <!-- Stats Section - Exodus Style -->
  <section class="section--sm bg-accent stats-section exodus-stats">
    <div class="container">
      <div class="grid grid-4 grid--auto-fit stats-grid exodus-stats-grid">
        <div class="stats-item exodus-stat">
          <div class="number">43+</div>
          <div class="label">Languages</div>
        </div>
